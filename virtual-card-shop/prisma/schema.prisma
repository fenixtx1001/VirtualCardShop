generator client {
  provider   = "prisma-client-js"
  engineType = "binary"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Set {
  id             String   @id
  year           Int?
  brand          String?
  sport          String?
  packPriceCents Int?     @default(0)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  cards          Card[]
}

model Product {
  id                String            @id
  year              Int?
  brand             String?
  sport             String?
  packPriceCents    Int?              @default(0)
  packsPerBox       Int?
  packImageUrl      String?
  boxImageUrl       String?
  cardsPerPack      Int?
  createdAt         DateTime          @default(now())
  updatedAt         DateTime          @updatedAt
  productSets       ProductSet[]
  sealedInventories SealedInventory[]
}

model ProductSet {
  id          String   @id
  productId   String
  name        String?
  isBase      Boolean  @default(false)
  isInsert    Boolean  @default(false)
  oddsPerPack Int?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  cards       Card[]
  product     Product  @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@index([productId])
}

model Card {
  id            Int             @id @default(autoincrement())
  setId         String
  productSetId  String?
  cardNumber    String
  player        String
  team          String?
  position      String?
  subset        String?
  variant       String?
  bookValue     Float           @default(0)
  quantityOwned Int             @default(0)
  frontImageUrl String?
  backImageUrl  String?
  productSet    ProductSet?     @relation(fields: [productSetId], references: [id])
  set           Set             @relation(fields: [setId], references: [id])
  ownerships    CardOwnership[]

  @@unique([setId, cardNumber])
  @@unique([productSetId, cardNumber])
  @@index([setId])
  @@index([player])
  @@index([productSetId])
}

model User {
  id              String            @id
  balanceCents    Int               @default(5000)
  nextRewardAt    DateTime?
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt
  cardOwnerships  CardOwnership[]
  sealedInventory SealedInventory[]
}

model SealedInventory {
  id         Int      @id @default(autoincrement())
  userId     String
  productId  String
  packsOwned Int      @default(0)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  product    Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, productId])
}

model CardOwnership {
  id       Int    @id @default(autoincrement())
  userId   String
  cardId   Int
  quantity Int    @default(0)
  card     Card   @relation(fields: [cardId], references: [id], onDelete: Cascade)
  user     User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, cardId])
  @@index([cardId])
}
