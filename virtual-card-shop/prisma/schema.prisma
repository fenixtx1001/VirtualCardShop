generator client {
  provider   = "prisma-client-js"
  engineType = "binary"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Set {
  id             String  @id
  year           Int?
  brand          String?
  sport          String?
  packPriceCents Int?    @default(0)

  cards     Card[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Product {
  id             String  @id
  year           Int?
  brand          String?
  sport          String?
  packPriceCents Int?    @default(0)
  packsPerBox    Int?
  packImageUrl   String?
  boxImageUrl    String?

  // ✅ No default. Admin must set this per product.
  cardsPerPack   Int?

  productSets ProductSet[]

  createdAt         DateTime          @default(now())
  updatedAt         DateTime          @updatedAt
  sealedInventories SealedInventory[]
}

model ProductSet {
  id          String  @id
  productId   String
  name        String?
  isBase      Boolean @default(false)

  // ✅ Flag inserts at the ProductSet level (not per card)
  isInsert    Boolean @default(false)

  oddsPerPack Int? // e.g. 84 means "1:84 packs"

  product Product @relation(fields: [productId], references: [id], onDelete: Cascade)
  cards   Card[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([productId])
}

model Card {
  id Int @id @default(autoincrement())

  // Legacy relationship (keep so nothing breaks)
  setId String
  set   Set    @relation(fields: [setId], references: [id])

  // New relationship
  productSetId String?
  productSet   ProductSet? @relation(fields: [productSetId], references: [id])

  cardNumber String
  player     String
  team       String?
  position   String?
  subset     String?
  variant    String?

  bookValue     Float   @default(0)
  quantityOwned Int     @default(0)

  // ✅ Front/back images
  frontImageUrl String?
  backImageUrl  String?

  ownerships CardOwnership[]

  @@unique([setId, cardNumber])
  @@unique([productSetId, cardNumber])
  @@index([setId])
  @@index([player])
  @@index([productSetId])
}

model User {
  id           String    @id
  balanceCents Int       @default(5000) // $50
  nextRewardAt DateTime? // null means can claim immediately
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  sealedInventory SealedInventory[]
  cardOwnerships  CardOwnership[]
}

model SealedInventory {
  id         Int      @id @default(autoincrement())
  userId     String
  productId  String
  packsOwned Int      @default(0)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  product Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@unique([userId, productId])
}

model CardOwnership {
  id       Int    @id @default(autoincrement())
  userId   String
  cardId   Int
  quantity Int    @default(0)

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  card Card @relation(fields: [cardId], references: [id], onDelete: Cascade)

  @@unique([userId, cardId])
  @@index([cardId])
}
