generator client {
  provider   = "prisma-client-js"
  engineType = "binary"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Set {
  id             String  @id
  year           Int?
  brand          String?
  sport          String?
  packPriceCents Int?    @default(0)

  cards     Card[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Product {
  id             String  @id
  year           Int?
  brand          String?
  sport          String?
  packPriceCents Int?    @default(0)
  packsPerBox    Int?
  packImageUrl   String?
  boxImageUrl    String?

  productSets ProductSet[]

  createdAt         DateTime          @default(now())
  updatedAt         DateTime          @updatedAt
  sealedInventories SealedInventory[]
}

model ProductSet {
  id          String  @id
  productId   String
  name        String?
  isBase      Boolean @default(false)
  oddsPerPack Int? // e.g. 84 means "1:84 packs"

  product Product @relation(fields: [productId], references: [id])
  cards   Card[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([productId])
}

model Card {
  id Int @id @default(autoincrement())

  // Legacy relationship (keep for now so nothing breaks)
  setId String
  set   Set    @relation(fields: [setId], references: [id])

  // New relationship
  productSetId String?
  productSet   ProductSet? @relation(fields: [productSetId], references: [id])

  cardNumber String
  player     String
  team       String?
  position   String?
  subset     String?
  insert     String?
  variant    String?

  bookValue     Float   @default(0)
  quantityOwned Int     @default(0)
  imageUrl      String?

  @@unique([setId, cardNumber])
  // allows enforcing uniqueness within a ProductSet when productSetId is set
  @@unique([productSetId, cardNumber])
  @@index([setId])
  @@index([player])
  @@index([productSetId])
}

model User {
  id           String    @id
  balanceCents Int       @default(5000) // $50
  nextRewardAt DateTime? // null means can claim immediately
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  sealedInventory SealedInventory[]
}

model SealedInventory {
  id         Int      @id @default(autoincrement())
  userId     String
  productId  String
  packsOwned Int      @default(0)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  product Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@unique([userId, productId])
}
